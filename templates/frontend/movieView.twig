{% extends '/frontend/layout.twig' %}

{% block content %}
	<div class="container">
		<div class="row justify-content-md-center">
			<div class="col-md-8">
				<div class="card mb-4 shadow-sm">
					<div class="card-header">
						<img class="card-img-top" src="https://image.tmdb.org/t/p/original{{ image }}">
					</div>
					<div class="card-body">
						<h1>{{ title }}</h1>
						<p class="card-text">{{ overview }}</p>
					</div>
					<div class="card-footer text-muted">
						<div class="d-flex justify-content-between">
							<p class="p2">{{ date }}</p>
							<p class="p2">{{ vote_average }}/10</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center">
			<a type="button" href="index.php" class="btn-default">Retour</a>
		</div>
	</div>
{% endblock %}
